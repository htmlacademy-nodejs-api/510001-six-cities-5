{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2022",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "types": [
      "node"
    ],
    "lib": [
      "ESNext"
    ],
    "paths": {
      "tslib": [
        "node_modules/tslib/tslib.d.ts"
      ],
      "@/*": [
        "src/*"
      ],
      "@mocks/*": [
        "mocks/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "ts-node": {
    "esm": true,
    "ts-node": {
      "require": [
        "tsconfig-paths/register"
      ]
    }
  }
}
